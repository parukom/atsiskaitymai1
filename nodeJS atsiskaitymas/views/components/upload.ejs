<div class="uploadModal hidden">
  <div class="h1AndCloseButton">
    <h1 class="uploadH1 ffamily">
      Upload your <span class="cl-green">blog</span>
    </h1>
    <div class="closeModalButton">❌</div>
  </div>
  <form action="/upload" method="post">
    <label class="ffamily label" for="title">Enter title</label> <br />
    <input
      class="ffamily input"
      type="text"
      name="title"
      placeholder="Short story of Cindirella"
    />
    <br />
    <label class="ffamily label" for="content">Type your content</label> <br />
    <textarea
      class="ffamily textarea"
      name="content"
      placeholder="Once upon a time ..."
    ></textarea>
    <br />
    <input class="ffamily uploadKnopke" type="submit" value="Upload" />
  </form>
</div>
